@page "/registry/acts"
@attribute [Authorize]

<MudCard Class="glass-effect rounded-xl shadow-lg p-6">
    <MudCardHeader>
        <MudText Typo="Typo.h5">Реестр актов</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@acts" Hover="true">
            <HeaderContent>
                <MudTh>ID</MudTh>
                <MudTh>Название</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="ID">@context.Id</MudTd>
                <MudTd DataLabel="Название">@context.Name</MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    List<ActRow> acts = new();

    protected override void OnInitialized()
    {
        acts = new() { new ActRow { Id = 1, Name = "Акт №1" } };
    }

    class ActRow
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }
}
