@page "/registry/answers"
@attribute [Authorize]

<MudCard Class="glass-effect rounded-xl shadow-lg p-6">
    <MudCardHeader>
        <MudText Typo="Typo.h5">Реестр ответов</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@answers" Hover="true">
            <HeaderContent>
                <MudTh>ID</MudTh>
                <MudTh>Тема</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="ID">@context.Id</MudTd>
                <MudTd DataLabel="Тема">@context.Subject</MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    List<AnswerRow> answers = new();

    protected override void OnInitialized()
    {
        answers = new() { new AnswerRow { Id = 1, Subject = "Ответ по заявлению" } };
    }

    class AnswerRow
    {
        public int Id { get; set; }
        public string Subject { get; set; } = string.Empty;
    }
}
