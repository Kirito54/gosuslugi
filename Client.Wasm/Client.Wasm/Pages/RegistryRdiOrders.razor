@page "/registry/rdi-orders"
@attribute [Authorize]

<MudCard Class="glass-effect rounded-xl shadow-lg p-6">
    <MudCardHeader>
        <MudText Typo="Typo.h5">Реестр РДИ приказов</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@orders" Hover="true">
            <HeaderContent>
                <MudTh>ID</MudTh>
                <MudTh>Номер</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="ID">@context.Id</MudTd>
                <MudTd DataLabel="Номер">@context.Number</MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    List<OrderRow> orders = new();

    protected override void OnInitialized()
    {
        orders = new() { new OrderRow { Id = 1, Number = "01-РДИ" } };
    }

    class OrderRow
    {
        public int Id { get; set; }
        public string Number { get; set; } = string.Empty;
    }
}
