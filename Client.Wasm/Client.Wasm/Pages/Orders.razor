@attribute [Authorize]
@page "/orders"

@using Client.Wasm.DTOs
@inject IJSRuntime Js
@inject NavigationManager NavigationManager
<div class="container p-4">
    <h1>Приказы</h1>
    <button class="btn btn-primary mb-3" @onclick="(() => edit.Show(new OrderDto()))">Добавить приказ</button>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Дата</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in orders)
            {
                <tr>
                    <td class="text-center">@o.Id</td>
                    <td>@o.Number</td>
                    <td>@o.Date.ToShortDateString()</td>
                    <td class="text-center">
                        <button class="btn btn-outline-secondary btn-sm" @onclick="(() => edit.Load(o.Id))">✎</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <OrderEdit @ref="edit" OnSaved="Reload" />
</div>

@code {
    List<OrderDto> orders = new();
    OrderEdit edit;

    Task Reload() { StateHasChanged(); return Task.CompletedTask; }
}
