@attribute [Authorize]
@page "/counter"

<div class="container p-4">
    <h1>Счётчик</h1>
    <p>Текущее значение: @currentCount</p>
    <SfButton CssClass="e-primary" OnClick="IncrementCount">Увеличить</SfButton>
</div>

@code {
    int currentCount = 0;
    void IncrementCount() => currentCount++;
}
